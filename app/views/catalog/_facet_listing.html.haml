- item_groups.each do |group|
	- if params[:id].include? "pub_date"
		%ul.facet_list_narrow
			- group.each do |item|
				- if item
					%li
						-if facet_in_params?( params[:id], item.value )
							= render_selected_facet_value(params[:id], item)
						- else
							= render_facet_value(params[:id], item)
	- else
		%ul.facet_list
			- group.each do |item|
				- if item
					%li
						-if facet_in_params?( params[:id], item.value )
							= render_selected_facet_value(params[:id], item)
						- else
							= render_facet_value(params[:id], item)